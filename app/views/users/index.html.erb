<h1>ユーザー一覧</h1>

<%= link_to '新規作成', new_user_path, :class => 'btn btn-primary'%> 

<table class="table">
  <thead>
    <th>アカウント</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
    <th>編集</th>
    <th>削除</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.account %></td>
        <td><%= user.mail_address %></td>
        <td><%= user.admin_text %></td>
        <td><%= link_to '編集', edit_user_path(user), :class => 'btn btn-warning btn-xs'%></td>
        <td><%= link_to '削除', user, method: :delete,
              data: { confirm: "本当に削除しますか？"}, :class => 'btn btn-danger btn-xs'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
